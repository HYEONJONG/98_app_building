import pandas as pd
from pandas import DataFrame
pd.set_option('display.max_rows', 500)
pd.set_option('display.max_columns', 500)
pd.set_option('display.width', 1000)

# Stock price from yahoo_fin
from yahoo_fin.stock_info import *
get_data("amzn", start_date = "01/01/2017", end_date = "01/31/2017")

# get list of S&P 500 tickers
#=======================
# check kospi & kosdaq
sp = tickers_sp500()
t_data("amzn", start_date = "01/01/2017", end_date = "01/31/2017")

# check data
price_data = {ticker : get_data(ticker) for ticker in sp}
#=======================

# Financial statement & others
income_statement = get_income_statement("amzn")
balance_sheet = get_balance_sheet("amzn")
cash_flow = get_cash_flow("amzn")

holders = get_holders("amzn")
info = holders["Direct Holders (Forms 3 and 4)"]
type(info); list(info.columns)
df = DataFrame(info, columns=['Holder','% Out'])
print(df)
df.to_csv("data.csv")

